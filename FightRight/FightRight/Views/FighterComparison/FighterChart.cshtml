							@foreach (var label in Model.dcFighterB_profile)
							{
								if (label.valueString != "")
								{
									@label.Label
									@label.valueString
									<br>
								}
							}


						</div>*@


					<br>
					<br>
					<br>
					<br>
					<br>
				</div>
			</div>
		</th>


		@*</tbody>*@

	</table>


	<br><br>
	<div>
		<button class="button-action" id="btnFighterSelect" name="btnFighterSelect" value="Submit">Run Comparison</button>
	</div>

</div>

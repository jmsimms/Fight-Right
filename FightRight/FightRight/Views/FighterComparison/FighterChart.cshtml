							@*<div class="card-body">FIGHTER A</div>*@
							@if (Model.fightersA != null)
							{
								var dropText = (Model.currentFighterNameA == "") ? "Select Fighter" : Model.currentFighterNameA;

								@Html.DropDownList("fighterSelectA", new SelectList(Model.fightersA.Values), dropText, new { @id = "FighterSelectA", @class = " text-body dropdown-menu-xxl-start card-body", @height = "100%", @width = "80%" })
							}
						</div>
					</div>
				</th>


				<th scope="col" colspan="3">
					<div class="col-xl-12 col-md-6">
						<div class="card text-black shadow-lg ">
							@*<div class="card-body">FIGHTER B</div>*@
							@if (Model.fightersA != null)
							{

								var dropText = (Model.currentFighterNameB == "") ? "Select Fighter" : Model.currentFighterNameB;

								@Html.DropDownList("fighterSelectB", new SelectList(Model.fightersB.Values), dropText, new { @id = "FighterSelectB", @class = " text-black dropdown-menu-xxl-start card-body", @height = "100%", @width = "80%" })
							}
						</div>
					</div>
				</th>

			</tr>
		</thead>

		@*<tbody>*@

		<th scope="col" colspan="3" class="">
			@*<div class="text-start">*@
			<div class="col-xl-12 col-md-6 text-center">
				<div class="card text-black">
					@*<div class="card-title card-header">Stats:</div>*@
					<div class="text-black card-body text-start">
						@foreach (var label in Model.dcFighterA_stats)
						{

							@label.Label
							@label.value
							<br>
						}


					</div>
					@*<hr />*@

					<br>
					<br>
					<br>


					<!--<div class="card-title">Profile:</div>
					<div class=" text-black card-text">-->
					@*<div class=" text-black card-footer">*@
					@*@foreach (var label in Model.dcFighterA_profile)

			</div>
		</th>

		<th scope="col" colspan="3" class="">
			@*<div class="text-start">*@
			<div class="col-xl-12 col-md-6 text-center">
				<div class="card text-black">
					@*<div class="card-title card-header text-black">Stats:</div>*@
					@*<div class="card-body">Stats:</div>*@
					<div class="text-black card-body text-start">
						@*<div class="bg-danger text-black card-footer">*@
						@foreach (var label in Model.dcFighterB_stats)
						{
							@label.Label
							@label.value
							<br>
						}


					</div>
					@*<hr />*@

					<br>
					<br>
					<br>

					@*<div class="card-text card-title">Profile:</div>
